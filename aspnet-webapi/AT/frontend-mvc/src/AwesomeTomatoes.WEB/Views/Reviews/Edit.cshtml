@model AwesomeTomatoes.WEB.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-md-center">
        <h1 class="text-center mt-4 text-white">Atualizar Informações da Avaliação</h1>
        <div class="card border-dark mb-5 shadow-sm rounded" style="max-width: 50rem;">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mt-2 mb-2">
                            <label asp-for="TextReview" class="mb-1"></label>
                            <textarea asp-for="TextReview" class="form-control"></textarea>
                            <span asp-validation-for="TextReview" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group mt-2 mb-2">
                            <label asp-for="ReviwerSatisfaction" class="mb-1"></label>
                            <input asp-for="ReviwerSatisfaction" class="form-control" />
                            <span asp-validation-for="ReviwerSatisfaction" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group mt-2 mb-2">
                            <label asp-for="ReviewDate" class="mb-1"></label>
                            <input asp-for="ReviewDate" class="form-control" />
                            <span asp-validation-for="ReviewDate" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group mt-2 mb-2">
                            <label asp-for="MovieId" class="mb-1"></label>
                            <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                            <span asp-validation-for="MovieId" class="text-danger"></span>
                        </div>
                        <br />
                        <br />
                        <div class="form-group mb-3">
                            <input type="submit" value="Salvar" class="btn btn-outline-primary" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>  
                    </form>
                </div>
            </div>
        </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</div>