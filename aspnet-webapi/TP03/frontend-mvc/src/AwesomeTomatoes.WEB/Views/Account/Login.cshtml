@model AwesomeTomatoes.WEB.Models.Account.Login

@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row justify-content-md-center">
        <h1 class="text-center mt-4 text-white">Realizar Login</h1>
        <div class="card border-dark mb-5 shadow-sm rounded" style="max-width: 50rem;">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mt-2 mb-2">
                            <label asp-for="Username" class="mb-1"></label>
                            <input asp-for="Username" class="form-control" placeholder="Digite o Nome do Filme"/>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <br />
                       <div class="form-group mt-2 mb-2">
                            <label asp-for="Password" class="mb-1"></label>
                            <input asp-for="Password" class="form-control" placeholder="Digite a senha"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br />
                        <br />
                        <div class="form-group mb-3">
                            <input type="submit" value="Entrar" class="btn btn-outline-primary" />
                            <a asp-action="Login" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                    @ViewBag.Message
                </div>
            </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</div>