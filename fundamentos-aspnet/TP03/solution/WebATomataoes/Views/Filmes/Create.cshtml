@model WebATomataoes.ViewModels.FilmesViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Filme</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id</label>
                <input data-val=false asp-for="Id" class="form-control" readonly=true placeholder="ID Gerado Automaticamente"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o Nome do Filme"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Estudio" class="control-label">Estúdio</label>
                <input asp-for="Estudio" class="form-control" placeholder="Digite o nome do Estúdio Reponsável"/>
                <span asp-validation-for="Estudio" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DataLancamento" class="control-label">Data de Lançamento</label>
                <input asp-for="DataLancamento" class="form-control" />
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                 <a asp-action="Index"   class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
