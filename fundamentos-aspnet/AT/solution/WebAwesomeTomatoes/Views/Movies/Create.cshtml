@model WebAwesomeTomatoes.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1  class="text-white">Adicionar um Novo Filme</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="text-white"></label>
                <input asp-for="Name" class="form-control" placeholder="Digite o Nome do Filme"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FilmStudio" class="text-white"></label>
                <input asp-for="FilmStudio" class="form-control" placeholder="Digite o nome do Estúdio Reponsável"/>
                <span asp-validation-for="FilmStudio" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ReleaseDate" class="text-white"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="BoxOffice" class="text-white"></label>
                <input asp-for="BoxOffice" class="form-control" placeholder="Digite a Bilheteria R$"/>
                <span asp-validation-for="BoxOffice" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
