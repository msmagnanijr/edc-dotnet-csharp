@model WebAwesomeTomatoes.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white">Atualizar Informações da Avaliação</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TextReview" class="text-white"></label>
                <input asp-for="TextReview" class="form-control" />
                <span asp-validation-for="TextReview" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Score" class="text-white"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ReviewDate" class="text-white"></label>
                <input asp-for="ReviewDate" class="form-control" />
                <span asp-validation-for="ReviewDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MovieId" class="text-white"></label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>  
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
