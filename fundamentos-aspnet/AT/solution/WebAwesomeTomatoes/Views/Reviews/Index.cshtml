@model IEnumerable<WebAwesomeTomatoes.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Lista de Avaliações de Filmes</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-dark">Adicionar uma Nova Avaliação</a>
</p>

<br />
 <div class="col-md-4">
<form asp-action="Index">
    <p>
        <input class="form-control"  type="text" name="filter" placeholder="Digite o nome do Filme para filtrar as Avaliações"/>
        <br />
        <input type="submit" value="Filtrar" class="btn btn-secondary"/>
    </p>
</form>
</div>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                 <label class="text-white"> @Html.DisplayNameFor(model => model.TextReview) </label>
            </th>
            <th>
                <label class="text-white"> @Html.DisplayNameFor(model => model.Score) </label>
            </th>
            <th>
                 <label class="text-white"> @Html.DisplayNameFor(model => model.ReviewDate) </label>
            </th>
            <th>
                <label class="text-white"> @Html.DisplayNameFor(model => model.Movie) </label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 <label class="text-white"> @Html.DisplayFor(modelItem => item.TextReview) </label>
            </td>
            <td>
                 <label class="text-white"> @Html.DisplayFor(modelItem => item.Score) </label>
            </td>
            <td>
                 <label class="text-white"> @Html.DisplayFor(modelItem => item.ReviewDate) </label>
            </td>
            <td>
                 <label class="text-white"> @Html.DisplayFor(modelItem => item.Movie.Name) </label>
            </td>
            <td>
                @Html.ActionLink("Atualizar", "Edit", new { id=item.Id }, new { @class = "btn btn-success"}) 
                @Html.ActionLink("Detalhes", "Details", new {id=item.Id }, new { @class = "btn btn-secondary"})
                @Html.ActionLink("Remover", "Delete", new { id=item.Id }, new { @class = "btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
